<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<LangVersion>latest</LangVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\.editorconfig" Link=".editorconfig" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="NiTiSCore" Version="2.*" />
	  <PackageReference Include="NiTiS.Collections" Version="1.2.3.*" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="*.dll" CopyToOutputDirectory="Always">
			<IncludeInPackage>true</IncludeInPackage>
		</Content>
		<Content Include="*.so" CopyToOutputDirectory="Always">
			<IncludeInPackage>true</IncludeInPackage>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Services\Runtime\" />
	</ItemGroup>
	
</Project>
